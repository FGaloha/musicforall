

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
        <%= form_tag albums_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find an album"
          %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-sm-8">
      <div id="albums">
        <% @albums.each do |album| %>
          <h4><%= album.title %></h4>
          <p><%= album.synopsis %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
